#:kivy 2.3.1

<GerenciadorTelas>:
    TelaInicial:
    TelaBoasVindas:

<TelaInicial>:
    name: 'inicial'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Digite seu nome:'

        TextInput:
            id: nome_input
            multiline: False

        Button:
            text: 'Salvar'
            on_press: root.salvar_nome()

<TelaBoasVindas>:
    name: 'boas_vindas'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            id: mensagem
            text: ''

        Button:
            text: 'Alterar nome'
            on_press: app.root.current = 'inicial'