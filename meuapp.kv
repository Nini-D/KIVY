#:kivy 2.3.1

<GerenciadorTelas>:
    TelaBoasVindas:
        name: "boasvindas"
    TelaSugestao:
        name: "sugestao"

<TelaBoasVindas>:
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 15

        Label:
            text: "Bem-vindo ao App de Filmes! :))"
            font_size: 40
            bold: True
            halign: "center"
            size_hint_y: None
            height: 400
            color: 1, 0, 1, 1

        TextInput:
            id: input_nome
            hint_text: "Digite seu nome"
            multiline: False
            size_hint_y: None
            height: 50

        Button:
            text: "Continuar"
            background_color: 0, 1, 1, 1  # Azul
            font_size: 20
            size_hint_y: None
            height: 90
            on_press:
                root.manager.get_screen("sugestao").set_nome(input_nome.text)
                root.manager.current = "sugestao"


<TelaSugestao>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 15

        # Cabeçalho fixo
        Label:
            text: "Escolha seu Filme!"
            font_size: 28
            bold: True
            halign: "center"
            size_hint_y: None
            height: 50
            color: 0, 1, 1, 1  # Verde

        Label:
            id: label_boas_vindas
            text: ""
            font_size: 20
            halign: "center"
            valign: "middle"
            text_size: self.width, None
            size_hint_y: None
            height: 40

        Spinner:
            id: spinner_genero
            text: "Escolha um gênero"
            values: ["Ação", "Comédia", "Animação"]
            size_hint_y: None
            height: 40

        Button:
            text: "Sugerir Filme"
            background_color: 1, 0, 0, 1  # Vermelho
            font_size: 20
            size_hint_y: None
            height: 50
            on_press: root.sugerir_filme()

        Label:
            id: label_filme
            text: ""
            font_size: 18
            halign: "center"
            valign: "middle"
            text_size: self.width, None
